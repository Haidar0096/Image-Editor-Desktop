{
  "app-id": "com.zlimits.batch_image_editor",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "batch_image_editor",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network"
  ],
  "modules": [
    {
      "name": "batch_image_editor",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p FlutterApp",
        "tar -xf FlutterApp-Linux-Portable.tar.gz -C FlutterApp",
        "cp -r FlutterApp /app/",
        "chmod +x /app/FlutterApp/batch_image_editor",
        "mkdir -p /app/bin",
        "ln -s /app/FlutterApp/batch_image_editor /app/bin/batch_image_editor",
        "mkdir -p /app/share/metainfo",
        "cp -r flatpak/com.zlimits.batch_image_editor.metainfo.xml /app/share/metainfo/",
        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "cp -r flatpak/batch-image-editor.png /app/share/icons/hicolor/scalable/apps/com.zlimits.batch-image-editor.png",
        "mkdir -p /app/share/applications",
        "cp -r flatpak/com.zlimits.batch-image-editor.desktop /app/share/applications/",
        "mkdir -p /app/share/appdata",
        "cp -r flatpak/com.zlimits.batch_image_editor.metainfo.xml /app/share/appdata/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "https://github.com/Haidar0096/Image-Editor-Desktop/blob/master/flatpak/com.zlimits.batch_image_editor.metainfo.xml"
        },
        {
          "type": "file",
          "path": "https://github.com/Haidar0096/Image-Editor-Desktop/blob/master/flatpak/com.zlimits.batch-image-editor.desktop"
        },
        {
          "type": "file",
          "path": "https://raw.githubusercontent.com/Haidar0096/Image-Editor-Desktop/master/flatpak/batch-image-editor.png"
        },
        {
          "type": "file",
          "path": "FlutterApp-Linux-Portable.tar.gz"
        }
      ]
    }
  ]
}